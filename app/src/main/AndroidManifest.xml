<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.client">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Client">
        <activity android:name=".screens.message.activity.MessageActivity" />
        <activity android:name=".screens.noti.activity.NotificationActivity" />
        <activity android:name=".screens.reset.activity.PasswordResetActivity" />
        <activity android:name=".screens.wallet.activity.TransactionDetailActivity" />
        <activity android:name=".screens.wallet.activity.RechargeActivity" />
        <activity android:name=".screens.search.activity.SearchActivity" />
        <activity android:name=".screens.subject.activity.SubjectByUserActivity" />
        <activity android:name=".screens.profile.manager_info.update.UpdatePasswordActivity" />
        <activity android:name=".screens.profile.manager_info.update.UpdateInfoActivity" />
        <activity android:name=".screens.profile.manager_info.ManagerInfoActivity" />
        <activity android:name=".screens.register.activity.RegisterActivity" />
        <activity android:name=".screens.category.activity.CategoryActivity" />
        <activity android:name=".screens.subject.activity.SubjectDetailActivity" />
        <activity android:name=".screens.subject.activity.SubjectMoreActivity" />
        <activity android:name=".screens.login.activity.LoginPasswordActivity" />
        <activity android:name=".screens.login.activity.LoginEmailActivity" />
        <activity android:name=".screens.splash.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.main.activity.MainActivity" />

        <service android:name=".app.MyFirebaseService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>