<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_5"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="@dimen/dimen_120"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_5"
        android:layout_marginVertical="@dimen/dimen_10"
        android:background="@drawable/border_item_gray_5"
        android:orientation="vertical"
        android:padding="@dimen/dimen_1">

        <ImageView
            android:id="@+id/view_icon"
            android:layout_width="@dimen/dimen_120"
            android:layout_height="@dimen/dimen_100"
            android:scaleType="centerInside"
            android:src="@drawable/ic_category_default" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"
            tools:text="@string/item_product_name" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_5"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12"
            tools:text="@string/item_product_price" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_5"
            android:gravity="start|center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12"
            tools:text="@string/item_product_quantity" />

        <TextView
            android:id="@+id/tv_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_5"
            android:layout_marginVertical="@dimen/dimen_5"
            android:background="@drawable/bg_btn_gray_light"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen_5"
            android:text="@string/buy_product"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
