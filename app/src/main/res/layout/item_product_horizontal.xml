<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_5"
        android:layout_marginVertical="@dimen/dimen_10"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardElevation="@dimen/dimen_1">

        <LinearLayout
            android:layout_width="@dimen/dimen_120"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_avatar"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="@dimen/dimen_100"
                android:scaleType="fitXY"
                android:src="@drawable/subject_default" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"
                tools:text="@string/item_product_name" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12"
                tools:text="@string/item_product_price" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_5"
                android:gravity="start|center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12"
                tools:text="@string/item_product_quantity" />
            <TextView
                android:id="@+id/tv_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_gray_light"
                android:gravity="center"
                android:paddingVertical="@dimen/dimen_5"
                android:text="@string/buy_product"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/dimen_5"
                android:layout_marginVertical="@dimen/dimen_5"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
