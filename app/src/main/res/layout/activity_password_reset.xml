<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.reset.activity.PasswordResetActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="16dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:layout_weight="0"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset mật khẩu"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginRight="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dark" />
    <TextView
        android:id="@+id/sendEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/blue"
        android:text="@string/send_email_verification"
        android:textSize="14dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/red_light"
        android:textSize="14dp"
        android:visibility="gone"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/view_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:text="@string/mail_description_reset"
                android:textSize="14dp" />
            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                app:otp_box_background_error="@drawable/box_red"
                app:otp_box_background_success="@drawable/bg_btn_disable"
                app:otp_box_background="@drawable/bg_btn_disable"
                app:otp_box_background_active="@drawable/box_red"
                app:height="40dp"
                app:width="40dp"
                app:length="6"
                app:otp_text_size="24dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:theme="@style/CProgressbar.Red"
            app:layout_constraintLeft_toLeftOf="@id/view_code"
            app:layout_constraintRight_toRightOf="@id/view_code"
            app:layout_constraintTop_toTopOf="@id/view_code"
            app:layout_constraintBottom_toBottomOf="@id/view_code" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/view_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Mật khẩu mới"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/box_red">
                </EditText>
                <ToggleButton
                    android:id="@+id/eye"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:textOn=""
                    android:textOff=""
                    android:button="@drawable/toggle_eye"
                    android:background="@android:color/transparent"/>
            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/reset"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="Reset mật khẩu"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_disable"
                    android:enabled="false"
                    tools:ignore="MissingConstraints" />
                <ProgressBar
                    android:id="@+id/progress_bar2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:theme="@style/CProgressbar.White"
                    app:layout_constraintLeft_toLeftOf="@id/reset"
                    app:layout_constraintRight_toRightOf="@id/reset"
                    app:layout_constraintTop_toTopOf="@id/reset"
                    app:layout_constraintBottom_toBottomOf="@id/reset" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:theme="@style/CProgressbar.Red"
            app:layout_constraintLeft_toLeftOf="@id/view_password"
            app:layout_constraintRight_toRightOf="@id/view_password"
            app:layout_constraintTop_toTopOf="@id/view_password"
            app:layout_constraintBottom_toBottomOf="@id/view_password" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>