<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/dimen_6"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/lnl_super_category"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginStart="@dimen/dimen_10"
        android:background="@drawable/border_item_gray_dark"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_1"
            app:cardCornerRadius="@dimen/dimen_5"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/view_icon"
                android:layout_width="@dimen/dimen_58"
                android:layout_height="@dimen/dimen_58"
                android:scaleType="fitXY"
                android:src="@drawable/ic_category_default" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            style="@style/regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:maxWidth="150dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"
            tool:text="Thực phẩm tươi sống" />
    </LinearLayout>
</androidx.cardview.widget.CardView>