<!--                    android:textStyle="bold"-->
<!--                    android:maxLines="1"-->
<!--                    android:ellipsize="end"-->
<!--                    android:layout_marginBottom="15dp"/>-->

<!--            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>