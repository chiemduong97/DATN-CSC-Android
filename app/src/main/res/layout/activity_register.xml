<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.register.activity.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_back" />

            <TextView
                style="@style/bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/register_text_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/gray_dark" />

                <TextView
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/register_text_full_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/et_full_name"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/box_red"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_full_name_error"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/red_light"
                    android:textSize="@dimen/text_14"
                    android:visibility="gone"
                    tools:text="Bị lỗi rồi bạn ơi!"
                    tools:visibility="visible" />

                <TextView
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/register_text_phone_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/box_red"
                    android:inputType="number"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"
                    tools:ignore="TextFields" />

                <TextView
                    android:id="@+id/tv_phone_error"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/red_light"
                    android:textSize="@dimen/text_14"
                    android:visibility="gone"
                    tools:text="Bị lỗi rồi bạn ơi!"
                    tools:visibility="visible" />

                <TextView
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/register_text_email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/et_email"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/box_red"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_email_error"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/red_light"
                    android:textSize="@dimen/text_14"
                    android:visibility="gone"
                    tools:text="Bị lỗi rồi bạn ơi!"
                    tools:visibility="visible" />

                <TextView
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/register_text_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10">

                    <EditText
                        android:id="@+id/et_password"
                        style="@style/bold"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:background="@drawable/box_red"
                        android:paddingHorizontal="@dimen/dimen_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <ToggleButton
                        android:id="@+id/tbt_eye_password"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="@android:color/transparent"
                        android:button="@drawable/toggle_eye"
                        android:textOff=""
                        android:textOn="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_password_error"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/red_light"
                    android:textSize="@dimen/text_14"
                    android:visibility="gone"
                    tools:text="Bị lỗi rồi bạn ơi!"
                    tools:visibility="visible" />

                <TextView
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/register_text_confirm_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10">

                    <EditText
                        android:id="@+id/et_confirm"
                        style="@style/bold"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:background="@drawable/box_red"
                        android:paddingHorizontal="@dimen/dimen_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <ToggleButton
                        android:id="@+id/tbt_eye_confirm"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="@android:color/transparent"
                        android:button="@drawable/toggle_eye"
                        android:textOff=""
                        android:textOn="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_confirm_error"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/red_light"
                    android:textSize="@dimen/text_14"
                    android:visibility="gone"
                    tools:text="Bị lỗi rồi bạn ơi!"
                    tools:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_dark" />

        <TextView
            android:id="@+id/tv_register"
            style="@style/bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:layout_margin="@dimen/dimen_15"
            android:layout_weight="0"
            android:background="@drawable/bg_btn_disable"
            android:enabled="false"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_15"
            android:paddingVertical="@dimen/dimen_10"
            android:text="@string/register_text_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_opacity_70"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:theme="@style/CProgressbar.Red" />

        <TextView
            style="@style/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_2"
            android:text="@string/text_rll_loading"
            android:textColor="@color/red_light"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>
</RelativeLayout>